extends layout

block content
  div(class='container')
    div(class="row")
      div(class='col-xs-12')
        a(href="#", id="shutdown", class="btn btn-block btn-lg btn-primary") Shutdown
    div(class="row")
      div(class='col-xs-12')
        a(href="#", id="reboot", class="btn btn-block btn-lg btn-success") Reboot
