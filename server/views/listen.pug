extends layout

block content
  div(class='container')
    div(class="row")
      div(class='col-xs-12')
        a(href="#", id="Listen", class="btn btn-block btn-lg btn-primary") Listen
        br
        br
        br
    div(class='row')
      div(class='col-sm-4')
      div(class='col-sm-4 col-xs-12')
        form(id='remote')
          input(type='text' id='gif-query' class='form-control input-lg input-block' placeholder='enter query')
          br
          input(type='submit' class='btn btn-primary btn-block' value='Send')
          br
          br
          br
      div(class='col-sm-4')
    div(class='row')
      div(class='col-sm-4')
      div(class='col-sm-4 col-xs-12')
        form(id='direct')
          input(type='text' id='gif-url' class='form-control input-lg input-block' placeholder='enter gif url')
          br
          input(type='submit' class='btn btn-danger btn-block' value='Send URL')
          br
          br
          br
      div(class='col-sm-4')
    div(class='row')
      div(class='col-sm-4')
      div(class='col-sm-4 col-xs-12')
        form(id='servo')
          input(type='text' class='form-control input-lg input-block' id='servo-vals' placeholder='enter query')
          br
          input(type='submit' class='btn btn-success btn-block' value='Send Servo')
          br
          br
      div(class='col-sm-4')
    div(class="row")
      div(class='col-xs-12')
        a(href="#", id="resetAll", class="btn btn-block btn-lg btn-danger") Reset All
    div(class="row")
      div(class='col-xs-12')
        a(href="#", id="refresh", class="btn btn-block btn-lg btn-danger") Refresh

block javascript
  script(src='/js/listen.js')
